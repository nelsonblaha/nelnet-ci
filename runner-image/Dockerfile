# Custom GitHub Actions runner with Cypress dependencies pre-installed
FROM myoung34/github-runner:latest

# Install Cypress dependencies once at image build time
# Note: Don't change USER - base image handles user switching
RUN apt-get update && apt-get install -y \
    xvfb \
    libgtk2.0-0 \
    libgtk-3-0 \
    libgbm-dev \
    libnotify-dev \
    libnss3 \
    libxss1 \
    libasound2 \
    fonts-liberation \
    libappindicator3-1 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*
